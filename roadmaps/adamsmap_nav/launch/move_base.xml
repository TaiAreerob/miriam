<launch>
<!--  <arg name="map_file" default="$(find adamsmap_graph)/maps/z.yaml"/>-->
<!--  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" ns="$(env ROBOT)"/>-->

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" ns="$(env ROBOT)">
    <remap from="/$(env ROBOT)/map" to="/map"/>
    <remap from="/$(env ROBOT)/roadmap" to="/roadmap"/>

    <param name="base_global_planner" value="adamsmap_global_planner/AdamsmapGlobalPlanner" />
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    
    <rosparam file="$(find adamsmap_nav)/config/base_local_planner_params.yaml" command="load" />
    
    <rosparam file="$(find adamsmap_nav)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam param="global_costmap/scan" subst_value="True">{data_type: LaserScan, topic: /$(env ROBOT)/laser1, marking: true, clearing: true, min_obstacle_height: 0.0, max_obstacle_height: 1.0}</rosparam>
    
    <rosparam file="$(find adamsmap_nav)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam param="local_costmap/scan" subst_value="True">{data_type: LaserScan, topic: /$(env ROBOT)/laser1, marking: true, clearing: true, min_obstacle_height: 0.0, max_obstacle_height: 1.0}</rosparam>
    
    <rosparam file="$(find adamsmap_nav)/config/local_costmap_params.yaml" command="load" />
    <param name="local_costmap/robot_base_frame" value="$(env ROBOT)/base_link_tf2" />
    
    <rosparam file="$(find adamsmap_nav)/config/global_costmap_params.yaml" command="load" />
    <param name="global_costmap/robot_base_frame" value="$(env ROBOT)/base_link_tf2" />
    
    <rosparam file="$(find adamsmap_nav)/config/move_base_params.yaml" command="load" />
  </node>

</launch>
	
